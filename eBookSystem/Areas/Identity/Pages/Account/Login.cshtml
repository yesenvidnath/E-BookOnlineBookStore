@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<style>
    
    :root {
        --primary-color: #0d6efd;
        --secondary-color: #6c757d;
        --accent-color: #70d9e6;
    }

    .login-container {
        min-height: 100vh;
        background-color: #f8f9fa;
        padding-top: 4rem;
        padding-bottom: 4rem;
    }

    .login-card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 16px;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(5px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        overflow: hidden;
    }

    .login-form-container {
        padding: 3rem;
    }

    .login-image {
        height: 100%;
        object-fit: cover;
    }

    .form-control {
        border-radius: 10px;
        padding: 0.75rem 1rem;
        border: 1px solid #dee2e6;
        margin-bottom: 1rem;
    }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }

    .password-toggle-btn {
        position: absolute;
        right: 1rem;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: var(--secondary-color);
        cursor: pointer;
        padding: 0;
    }

        .password-toggle-btn:hover {
            color: var(--primary-color);
        }

    .btn-login {
        background-color: var(--primary-color);
        color: white;
        border: none;
        padding: 0.75rem;
        border-radius: 10px;
        font-weight: 500;
        width: 100%;
        transition: all 0.3s ease;
    }

        .btn-login:hover {
            background-color: #0b5ed7;
            transform: translateY(-2px);
        }

    .btn-signup {
        background-color: transparent;
        color: var(--primary-color);
        border: 1px solid var(--primary-color);
        padding: 0.5rem 1.5rem;
        border-radius: 10px;
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .btn-signup:hover {
            background-color: var(--primary-color);
            color: white;
            transform: translateY(-2px);
        }

    .validation-summary-errors {
        color: #dc3545;
        padding: 1rem;
        border-radius: 10px;
        background-color: rgba(220, 53, 69, 0.1);
        margin-bottom: 1rem;
    }

    .field-validation-error {
        color: #dc3545;
        font-size: 0.875rem;
        display: block;
        margin-top: -0.5rem;
        margin-bottom: 1rem;
    }
</style>

<div class="login-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10">
                <div class="login-card">
                    <div class="row g-0">
                        <div class="col-md-6">
                            <div class="login-form-container">
                                <h2 class="h3 mb-4 fw-bold text-primary">Welcome Back</h2>
                                <p class="text-secondary mb-4">Please sign in to your account</p>

                                <form id="account" method="post">
                                    <div asp-validation-summary="ModelOnly" class="validation-summary-errors" role="alert"></div>

                                    <div class="mb-3">
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0">
                                                <i class="bi bi-envelope text-secondary"></i>
                                            </span>
                                            <input class="form-control border-start-0"
                                                   asp-for="Input.Email"
                                                   autocomplete="username"
                                                   placeholder="Email address"
                                                   aria-required="true" />
                                        </div>
                                        <span asp-validation-for="Input.Email" class="field-validation-error"></span>
                                    </div>

                                    <div class="mb-4">
                                        <div class="input-group position-relative">
                                            <span class="input-group-text bg-light border-end-0">
                                                <i class="bi bi-lock text-secondary"></i>
                                            </span>
                                            <input class="form-control border-start-0"
                                                   asp-for="Input.Password"
                                                   autocomplete="current-password"
                                                   placeholder="Password"
                                                   aria-required="true" />
                                            <button type="button"
                                                    class="password-toggle-btn"
                                                    onclick="togglePasswordVisibility()">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                        </div>
                                        <span asp-validation-for="Input.Password" class="field-validation-error"></span>
                                    </div>

                                    <button id="login-submit"
                                            type="submit"
                                            class="btn-login mb-3">
                                        Sign In <i class="bi bi-arrow-right ms-2"></i>
                                    </button>

                                    <div class="d-flex justify-content-between align-items-center">
                                        <p class="mb-0 text-secondary">Don't have an account?</p>
                                        <a href="/signup" class="btn-signup">Sign Up</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="col-md-6 d-none d-md-block">
                            <img src="~/images/background.jpg"
                                 alt="Login"
                                 class="login-image w-100 h-100"
                                 loading="lazy" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function togglePasswordVisibility() {
        const passwordInput = document.querySelector('input[asp-for="Input.Password"]');
        const eyeIcon = document.querySelector('.password-toggle-btn i');

        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
            eyeIcon.classList.remove('bi-eye');
            eyeIcon.classList.add('bi-eye-slash');
        } else {
            passwordInput.type = 'password';
            eyeIcon.classList.remove('bi-eye-slash');
            eyeIcon.classList.add('bi-eye');
        }
    }
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
